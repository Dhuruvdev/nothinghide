modules = ["python-3.11", "web", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["fastfetch"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "NothingHide Web"

[[workflows.workflow]]
name = "NothingHide Web"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd nothinghide && pip install -e . -q 2>/dev/null; python -m uvicorn web.app:app --host 0.0.0.0 --port 5000 --reload"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
