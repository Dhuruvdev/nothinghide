modules = ["python-3.11", "web", "nodejs-20", "bash"]
[agent]
expertMode = true
integrations = ["javascript_object_storage:2.0.0", "python_openrouter_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["fastfetch", "freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zip", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "NothingHide Web"

[[workflows.workflow]]
name = "NothingHide Web"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd nothinghide && pip install -e . -q 2>/dev/null; python -m uvicorn web.app:app --host 0.0.0.0 --port 5000 --reload"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["python3", "-m", "uvicorn", "nothinghide.web.app:app", "--host", "0.0.0.0", "--port", "5000"]
